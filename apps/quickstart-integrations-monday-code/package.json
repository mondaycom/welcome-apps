{
  "name": "monday-code-nodejs-quickstart",
  "version": "1.8.0",
  "description": "Quickstart project for Monday.com integrations using Node.js",
  "main": "index.js",
  "type": "module",
  "author": "Dipro Bhowmik",
  "license": "ISC",

  "scripts": {
    "start": "npm run server",
    "dev": "npm run dev:stop && concurrently \"npm run dev:server\" \"npm run dev:expose\"",
    "dev:server": "NODE_TLS_REJECT_UNAUTHORIZED='0' nodemon --inspect=8080 index.js",
    "dev:expose": "ngrok http 8080",
    "dev:stop": "kill-port 8080",
    "server": "NODE_ENV=production node index.js",
    "deploy": "npm run mapps-updated code:push",
    "logs": "npm run mapps-updated code:logs",
    "mapps:init": "npm run mapps-updated init",
    "mapps-updated": "mapps -u"
  },

  "nodemonConfig": {
    "watch": [
      ".env",
      "src/"
    ]
  },
  
  "dependencies": {
    "@mondaycom/apps-sdk": "^0.1.3",
    "@octokit/rest": "^21.0.2",
    "body-parser": "^1.19.0",
    "dotenv": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "monday-sdk-js": "^0.1.4",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.1",
    "simple-oauth2": "^4.2.0",
    "uuid": "^9.0.0"
  },

  "devDependencies": {
    "@mondaycom/apps-cli": "^4.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^6.8.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.0.2",
    "ngrok": "^4.3.3"
  }
}
